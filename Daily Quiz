        {
          typ: 'freitext',
          frage: 'Welcher Kontinent ist sowohl ein Land als auch ein Kontinent?',
          antwort: 'Australien',
          feedback: 'Australien ist sowohl ein Land als auch ein Kontinent.'
        }

      ];

      const container = document.getElementById(containerId);
      if (!container) return;

      const heute = new Date();
      const startDesJahres = new Date(heute.getFullYear(), 0, 0);
      const diff = heute.getTime() - startDesJahres.getTime();
      const einTag = 1000 * 60 * 60 * 24;
      const tagDesJahres = Math.floor(diff / einTag) - 1;
      const frageIndex = tagDesJahres % fragen.length;
      const heutigeFrage = fragen[frageIndex];


      // Funktion zur Anpassung der Button-Breiten

      function adjustButtonWidths() {
        const buttons = container.querySelectorAll('.quiz-option');
        if (buttons.length === 0) return;

        let maxWidth = 0;

        buttons.forEach(button => {
          if (button.offsetWidth > maxWidth) {
            maxWidth = button.offsetWidth;
          }
        });


        buttons.forEach(button => {
          button.style.width = `${maxWidth}px`;
        });
      }

      function quizAnzeigen() {
        if (!heutigeFrage) {
          container.innerHTML =
            'Fehler: Heutige Frage konnte nicht geladen werden.';
          return;
        }
        let htmlContent =
          `<h3>Daily Quiz</h3><p>${heutigeFrage.frage}</p>`;
        if (heutigeFrage.typ === 'multiple-choice') {
          htmlContent += '<div class="quiz-optionen">';
          heutigeFrage.optionen.forEach((option, index) => {
            htmlContent +=
              `<button class="quiz-option" data-index="${index}">${option}</button>`;
          });
          htmlContent += '</div>';
        } else if (heutigeFrage.typ === 'freitext') {
          htmlContent += `
            <div>
              <input type="text" class="freitext-antwort" placeholder="Deine Antwort...">
              <button class="freitext-pruefen">Prüfen</button>
            </div>`;
        }
        htmlContent += '<div class="feedback-bereich"></div>';
        container.innerHTML = htmlContent;


        adjustButtonWidths();

        attachEventListeners();
      }

      function attachEventListeners() {
        if (heutigeFrage.typ === 'multiple-choice') {
          container.querySelectorAll('.quiz-option').forEach(button => {
            button.addEventListener('click', function() {
              checkAnswer(parseInt(this.dataset.index));
            });
          });
        } else if (heutigeFrage.typ === 'freitext') {
          const pruefenButton = container.querySelector('.freitext-pruefen');
          const textInput = container.querySelector('.freitext-antwort');
          if (pruefenButton && textInput) {
            pruefenButton.addEventListener('click', () => checkAnswer(
              textInput.value));
            textInput.addEventListener('keyup', event => {
              if (event.key === "Enter") pruefenButton.click();
            });
          }
        }
      }

      function checkAnswer(userAnswer) {
        const feedbackBereich = container.querySelector('.feedback-bereich');
        let isCorrect = false;
        if (heutigeFrage.typ === 'multiple-choice') {
          isCorrect = (userAnswer === heutigeFrage.antwort);
          container.querySelectorAll('.quiz-option').forEach(b => b.disabled =
            true);
        } else if (heutigeFrage.typ === 'freitext') {
          isCorrect = (userAnswer.trim().toLowerCase() === heutigeFrage
            .antwort.toLowerCase());
          container.querySelector('.freitext-antwort').disabled = true;
          container.querySelector('.freitext-pruefen').disabled = true;
        }
        if (isCorrect) {
          feedbackBereich.innerHTML =
            `<strong>Richtig!</strong> ${heutigeFrage.feedback}`;
          feedbackBereich.className = 'feedback-bereich feedback-korrekt';
        } else {
          feedbackBereich.innerHTML =
            `<strong>Leider falsch.</strong> ${heutigeFrage.feedback}`;
          feedbackBereich.className = 'feedback-bereich feedback-falsch';
        }
      }

      if (heutigeFrage) {
        quizAnzeigen();
      }
    })();
  </script>
</p>
